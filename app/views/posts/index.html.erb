<html>
  <body>
    <div class='posts'>
      <% @posts.each do |post| %>
        <div class='post'>
          <h2 class='title'>
            <%= link_to post.title, post_path(post.id) %>
          </h2>
          <small class='meta'>
            <span class='author'>by <%= post.author %> â€” </span>
            <em class='created_at'><%= post.created_at %></em>
          </small>
          <%= link_to 'Edit', edit_post_path(post.id) %>
          <form method='post' action='<%= post_path post.id %>' style='display: inline'> 
            <input name='_method' type='hidden' value='delete'>
            <input type='submit' value='Delete'>
          </form>
        </div>
        <hr>
      <% end %>
    </div>
    <%= link_to 'New Post', new_post_path %>
  </body>
</html>

